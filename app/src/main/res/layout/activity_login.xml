<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <include layout="@layout/my_action_bar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/timg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/system_name"
        android:textColor="@color/text_color"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shap_input_bg"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone"/>

        <EditText
            android:id="@+id/et_phone_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/please_input_phone_num"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textSize="16dp"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="11"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shap_input_bg"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/note"/>
        <EditText
            android:id="@+id/et_vcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/please_input_vCode"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textSize="16dp"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="11"/>
        <Button
            android:id="@+id/btn_get_vcode"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/select_vcode"
            android:text="@string/get_vCode"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_select_service"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shap_input_bg"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/note"/>
        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/text_color"
            android:textSize="16dp"
            android:maxLines="1"
            tool:text="主机"
            android:gravity="center_vertical"
            android:maxLength="11"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/select_btn_bg_1"
        android:text="登陆" />

</LinearLayout>