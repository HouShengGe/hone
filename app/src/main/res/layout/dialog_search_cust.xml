<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/Transparent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/shap_input_bg_10"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tv_tltie"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shap_search_cust"
            android:gravity="center"
            android:text="查询条件"
            android:textColor="@color/white"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="居住姓名："
                android:textColor="#333333"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:background="@drawable/shap_search_et"
                android:maxLines="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公民身份证："
                android:textColor="#333333"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/et_id_card"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:background="@drawable/shap_search_et"
                android:maxLines="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="居住房号："
                android:textColor="#333333"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/et_room_no"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:background="@drawable/shap_search_et"
                android:maxLines="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码："
                android:textColor="#333333"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/et_phone_no"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:background="@drawable/shap_search_et"
                android:maxLines="1"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="提交"
            android:background="@drawable/shape_search_btn"/>
    </LinearLayout>

</LinearLayout>