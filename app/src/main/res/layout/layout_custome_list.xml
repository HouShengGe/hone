<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="战三"
                android:textColor="#0d58a9"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_phone_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_name"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@+id/tv_name"
                tool:text="18505855095"
                android:textColor="#0d58a9"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="8dp"
                tool:text="男"
                android:textColor="#0d58a9"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_nation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_sex"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/tv_sex"
                android:text="汉"
                android:textColor="#0d58a9"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_sex"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/tv_nation"
                android:text="汉"
                android:textColor="#0d58a9"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_id_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sex"
                android:layout_marginTop="8dp"
                android:text="3369854965213698587"
                android:textColor="#0d58a9"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_id_number"
                android:layout_marginTop="8dp"
                android:text="浙江省杭州市余杭区XXXXXX"
                android:textColor="#0d58a9"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_arrive_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_address"
                android:layout_marginTop="8dp"
                android:text="来期：2016-12-21 下午：5:40"
                android:textColor="#0d58a9"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_leave_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_arrive_day"
                android:layout_marginTop="8dp"
                android:text="离期：2016-12-21 下午：5:40"
                android:textColor="#0d58a9"
                android:textSize="16sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_room_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1a5597"
                android:textSize="32sp"
                android:textStyle="bold"
                tool:text="3020" />

            <LinearLayout
                android:id="@+id/ll_room_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/tv_room_no"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房价："
                    android:textColor="#1a5597"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_room_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1a5597"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_check"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/tv_arrive_day"
                android:background="@drawable/button_bg1"
                android:text="人证查询"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>